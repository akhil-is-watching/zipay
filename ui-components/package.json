{
  "name": "@zipay/ui-components",
  "version": "0.1.0",
  "description": "Shared React component library for Zipay",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.3.5",
    "typescript": "^5.3.3",
    "@rainbow-me/rainbowkit": "^2.2.8",
    "wagmi": "^2.17.5",
    "viem": "^2.37.8"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles": {
      "import": "./dist/index.css",
      "require": "./dist/index.css"
    }
  },
  "sideEffects": [
    "*.css"
  ],
  "license": "ISC"
}